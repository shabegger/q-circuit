<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Quorithm</title>

    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)

    @Scripts.Render("~/bundles/modernizr")
  </head>
  <body>
    <header>
      <ul>
        <li class="header-link-home">@Html.ActionLink("Quorithm", "Index", "Home")</li>
        <li>@Html.ActionLink("Circuit Builder", "Index", "Circuit")</li>
      </ul>
      @Html.Partial("_LoginPartial")
    </header>

    @RenderBody()

    <footer>
      <p>&copy; @DateTime.Now.Year - Quorithm</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
  </body>
</html>
